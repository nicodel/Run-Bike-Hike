  <section id="new-session-view" disabled="true" class="new-session-view">
<div>
  <h1>Add a new session</h1>
  <button id="confirm-add-btn">Add</button>
  <h2>Select an activity</h2>
  <form id="select-activity">

    <label for="walking">
      <input type="radio" name="select-activity" value="walking" id="walking" />
      <img src="img/activities/walking.svg" alt="walking" />
    </label>

    <label for="running">
      <input type="radio" name="select-activity" value="running" id="running" />
      <img src="img/activities/running.svg" alt="running" />
    </label>

    <label for="racing">
      <input type="radio" name="select-activity" value="racing" id="racing" />
      <img src="img/activities/racing.svg" alt="racing" />
    </label>

    <label for="swimming">
      <input type="radio" name="select-activity" value="swimming" id="swimming" />
      <img src="img/activities/swimming.svg" alt="swimming" />
    </label>

    <label for="regular_biking">
      <input type="radio" name="select-activity" value="regular_biking" id="regular_biking" />
      <img src="img/activities/regular_biking.svg" alt="regular_biking" />
    </label>

    <label for="mountain_biking">
      <input type="radio" name="select-activity" value="mountain_biking" id="mountain_biking" />
      <img src="img/activities/mountain_biking.svg" alt="mountain_biking" />
    </label>

    <label for="time_trial_biking">
      <input type="radio" name="select-activity" value="time_trial_biking" id="time_trial_biking" />
      <img src="img/activities/time_trial_biking.svg" alt="time_trial_biking" />
    </label>

    <label for="trekking">
      <input type="radio" name="select-activity" value="trekking" id="trekking" />
      <img src="img/activities/trekking.svg" alt="hiking" />
    </label>

    <label for="skiing">
      <input type="radio" name="select-activity" value="skiing" id="skiing" />
      <img src="img/activities/skiing.svg" alt="skiing" />
    </label>

    <label for="paddling">
      <input type="radio" name="select-activity" value="paddling" id="paddling" />
      <img src="img/activities/paddling.svg" alt="paddling" />
    </label>

    <label for="climbing">
      <input type="radio" name="select-activity" value="climbing" id="climbing" />
      <img src="img/activities/climbing.svg" alt="climbing" />
    </label>

    <label for="weight">
      <input type="radio" name="select-activity" value="weight" id="weight" />
      <img src="img/activities/weight.png" alt="weight" />
    </label>

  </form>
  <form id="import-form" class="hidden behind">
    <input id="import-file" type="file"></input>
    <button id="import-btn" disabled='disabled'>Importer</button>
  </form>
  <form id="weight-form" class="hidden behind">
    <div class="width-half text-small align-left">Date
      <input id="new-weight-date" class="align-right" placeHolder="Date" type="text" />
    </div>
    <div class="width-half text-small align-left">Weight
      <input id="new-weight" class="align-right" placeHolder="Weight" type="text" />
    </div>
  </form>
  <div id="new-activity-details" class="hidden behind">
    <div class="width-half text-small align-left">Date
      <input id="new-session-date" class="align-right" placeHolder="Date" type="text" />
    </div>
    <div class="width-half text-small align-left">Start time
      <input id="new-session-time" class="align-right" placeHolder="Time" type="text" />
    </div>
    <div class="width-half text-small align-left">Distance
      <input id="new-session-distance" class="align-right" placeHolder="Distance" type="text" />
    </div>
    <div class="width-half text-small align-left">Duration
      <input id="new-session-duration" class="align-right" placeHolder="Duration" type="text" />
    </div>

    <div class="width-half text-small align-left">Altitude max.
      <input id="new-session-alt-max" class="align-right" placeHolder="Altitude max" type="text" disabled />
    </div>

    <div class="width-half text-small align-left">Altitude min.
      <input id="new-session-alt-min" class="align-right" placeHolder="Altitude min" type="text" disabled />
    </div>


    <div class="width-half text-small align-left">Average Speed
      <input id="new-session-avg-speed" class="align-right" placeHolder="Average speed" type="text" disabled />
    </div>
    <div class="width-half text-small align-left">Calories
      <input id="new-session-calories" class="align-right" placeHolder="Calories" type="text" disabled />
    </div>

  </div>

  <div id="new-map-container" class="new-line hidden behind">
    <h2>Map</h2>
    <div id='new-map' class="map"></div>
  </div>

  </div>
  </section>
