    <h1>Sessions</h1>
    <ul>
    </ul>
  </section>

  <section id="session-view" disabled="true" class="session-view">
    <ul></ul>
  </section>

  <section id="reports-view" disabled="true" class="reports-view">
    <h1>Rapports</h1>
  </section>
  <section id="preferences-view" disabled="true" class="preferences-view">
    <h1>Préférences</h1>
    <ul>
      <li><span>Langue</span>
        <select id="language">
          <option value="en">English</option>
          <option value="fr">Français</option>
        </select>
      </li>
      <li><span>Unité de mesure</span>
        <select name="unité de mesure" id="unit">
          <option value="metric" selected>Métrique</option>
          <option value="imperial">Impérial</option>
        </select>
      </li>
      <li><span>Sexe</span>
        <select name="sexe" id="gender">
          <option value="female">Femme</option>
          <option value="male">Homme</option>
        </select>
      </li>
      <li><span>Année de naissance</span>
        <select name="birthyear" id="birthyear">
          <option value="1970">1970</option>
          <option value="1971">1971</option>
          <option value="1972">1972</option>
          <option value="1973">1973</option>
          <option value="1974">1974</option>
          <option value="1975">1975</option>
          <option value="1976">1976</option>
        </select>
        <input type="date" name="naissance" id="birthyear">
      </li>
    </ul>
